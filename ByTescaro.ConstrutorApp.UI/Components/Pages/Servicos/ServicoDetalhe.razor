@page "/servico/detalhes/{Id:long}"

@using ByTescaro.ConstrutorApp.Application.DTOs
@using ByTescaro.ConstrutorApp.UI.Services
@using System.Globalization
@using Microsoft.AspNetCore.Authorization
@using Radzen
@using Radzen.Blazor
@inject ServicoApiService ServicoApiService
@inject NavigationManager Navigation
@attribute [Authorize]

<PageTitle>Detalhes do Serviço</PageTitle>

<RadzenCard Class="rz-mt-5 rz-p-4 rz-shadow-md rz-rounded-md rz-mx-auto" Style="max-width: 900px; width: 100%;">
    <RadzenHeading Size="H4" Text="Detalhes do Serviço" Class="rz-mb-3" />

    @if (servico == null)
    {
        <RadzenText Text="Carregando detalhes do serviço ou serviço não encontrado..." Style="color: gray; padding: 1rem;" />
        <RadzenProgressBar Value="100" ShowValue="false" Mode="ProgressBarMode.Indeterminate" Style="margin-top: 10px;" />
    }
    else
    {
        <RadzenFieldset Text="Informações do Serviço" Style="margin-bottom: 1.5rem;">
            <RadzenRow>
                <RadzenColumn Size="12" SizeMD="12">
                    <RadzenText TextStyle="TextStyle.Body1">
                        <strong>Nome:</strong> <span>@servico.Nome</span>
                    </RadzenText>
                </RadzenColumn>

                <RadzenColumn Size="12" SizeMD="12">
                    <RadzenText TextStyle="TextStyle.Body1">
                        <strong>Descrição:</strong> <span>@servico.Descricao</span>
                    </RadzenText>
                </RadzenColumn>
               
            </RadzenRow>
        </RadzenFieldset>


        <RadzenFieldset Text="Dados de Auditoria" Style="margin-bottom: 1.5rem;">
            <RadzenRow>
                <RadzenColumn Size="12" SizeMD="6">
                    <RadzenText TextStyle="TextStyle.Body1">
                        <strong>Usuário Cadastro:</strong> <span>@servico.UsuarioCadastroNome</span> @* Assumindo que UsuarioCadastro é o nome do usuário *@
                    </RadzenText>
                </RadzenColumn>
                <RadzenColumn Size="12" SizeMD="6">
                    <RadzenText TextStyle="TextStyle.Body1">
                        <strong>Data/Hora Cadastro:</strong> <span>@servico.DataHoraCadastro.ToString("dd/MM/yyyy HH:mm:ss")</span>
                    </RadzenText>
                </RadzenColumn>

            </RadzenRow>
        </RadzenFieldset>

        <RadzenDivider Style="margin: 2rem 0;" />

        <RadzenStack Orientation="Orientation.Horizontal" JustifyContent="JustifyContent.End" Gap="1rem" Class="rz-mt-3">
            <RadzenButton Text="Voltar"
                          ButtonStyle="ButtonStyle.Light"
                          Click="@(() => Navigation.NavigateTo("/servicos"))" />

            <RadzenButton Text="Editar"
                          Icon="edit"
                          ButtonStyle="ButtonStyle.Primary"
                          Click="@(() => Navigation.NavigateTo($"/servico/editar/{servico.Id}"))" />
        </RadzenStack>
    }
</RadzenCard>

@code {
    [Parameter]
    public long Id { get; set; }

    private ServicoDto? servico;
    // Removi _br, pois o ToString("dd/MM/yyyy HH:mm:ss") já usa a cultura atual,
    // que é pt-BR por padrão em sistemas configurados assim ou pode ser definida globalmente no Blazor.

    protected override async Task OnInitializedAsync()
    {
        servico = await ServicoApiService.GetByIdAsync(Id);
    }
}