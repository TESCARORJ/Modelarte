
@page "/servico/novo"
@page "/servico/editar/{Id:long}"

@using ByTescaro.ConstrutorApp.Application.DTOs
@using ByTescaro.ConstrutorApp.Domain.Enums
@using ByTescaro.ConstrutorApp.UI.Services
@using Microsoft.AspNetCore.Authorization
@using System.Globalization
@using System.Reflection
@using System.ComponentModel.DataAnnotations
@inject ServicoApiService ServicoApiService
@inject NavigationManager Navigation
@inject NotificationService NotificationService
@attribute [Authorize]

<PageTitle>Servico</PageTitle>

<RadzenCard Class="rz-mt-5 rz-p-4 rz-shadow-md rz-rounded-md rz-mx-auto" Style="max-width: 1300px; width: 100%;">
    <RadzenTemplateForm TItem="ServicoDto" Data="@servico" Submit="Salvar" InvalidSubmit="ExibirErros">
        <RadzenHeading Size="H4" Text="@(Id == 0 ? "Novo Serviço" : "Editar Serviço")" Class="rz-mb-3" />

        <!-- Identificação -->
        <RadzenFieldset Text="Identificação" Style="margin-bottom: 1.5rem;">
            <RadzenRow>
                <RadzenColumn Size="12" SizeMD="6">
                    <RadzenLabel Text="Nome" />
                    <RadzenTextBox @bind-Value="servico.Nome" Name="Nome" Style="width: 100%;" />
                    <RadzenRequiredValidator Component="Nome" Text="O nome é obrigatório" />
                </RadzenColumn>

                

                <RadzenColumn Size="12">
                    <RadzenLabel Text="Descrição" />
                    <RadzenTextBox @bind-Value="servico.Descricao" Name="Descricao" Multiline="true" Rows="3" Style="width: 100%;" />
                </RadzenColumn>
            </RadzenRow>
        </RadzenFieldset>

       
        <!-- Botões -->
        <RadzenStack Orientation="Orientation.Horizontal" JustifyContent="JustifyContent.End" Gap="1rem" Class="rz-mt-3">
            <RadzenButton Text="Cancelar" ButtonStyle="ButtonStyle.Light" Click="@Cancelar" />
            <RadzenButton Text="Salvar" ButtonType="ButtonType.Submit" Icon="save" Style="min-width: 120px;" />
        </RadzenStack>
    </RadzenTemplateForm>
</RadzenCard>

@code {
    [Parameter] public long Id { get; set; }

    private ServicoDto servico = new();
    private readonly CultureInfo _br = CultureInfo.GetCultureInfo("pt-BR");
    private ServicoDto _originalServicoDto = new();

    public class UnidadeMedidaOption
    {
        public UnidadeMedida? Value { get; set; }
        public string Label { get; set; } = string.Empty;
    }


    private List<UnidadeMedidaOption> UnidadeMedidaOptions =>
    Enum.GetValues(typeof(UnidadeMedida))
        .Cast<UnidadeMedida>()
        .Select(e => new UnidadeMedidaOption
            {
                Value = e,
                Label = e.GetType()
                         .GetMember(e.ToString())
                         .FirstOrDefault()?
                         .GetCustomAttribute<DisplayAttribute>()?
                         .Name ?? e.ToString()
            })
            .OrderBy(x => x.Label)
            .Prepend(new UnidadeMedidaOption { Value = null, Label = "-- Selecione --" })
            .ToList();

    protected override async Task OnInitializedAsync()
    {
        if (Id != 0)
        {
            var existente = await ServicoApiService.GetByIdAsync(Id);
            if (existente is not null)
            {
                servico = existente;
                _originalServicoDto = existente.Clone();
            }
        }
    }

    private async Task<List<string>> ValidateServicoForm(ServicoDto model)
    {
        var errors = new List<string>();

        // 1. Validação de Duplicidade do Nome
        if (!string.IsNullOrWhiteSpace(model.Nome))
        {
            string originalNome = _originalServicoDto?.Nome ?? string.Empty;
            bool nomeChanged = (model.Id == 0) || (model.Nome != originalNome);

            if (nomeChanged)
            {
                long? ignoreId = model.Id != 0 ? model.Id : (long?)null;
                bool nomeAlreadyExists = await ServicoApiService.NomeExistsAsync(model.Nome, ignoreId);

                if (nomeAlreadyExists)
                {
                    errors.Add("Já existe um serviço com este nome.");
                }
            }
        }
        

        return errors;
    }


    private async Task Salvar(ServicoDto model)
    {
        // Limpar strings (trim) se necessário, antes da validação
        model.Nome = model.Nome?.Trim() ?? string.Empty;
        model.Descricao = model.Descricao?.Trim() ?? string.Empty;

        // 1. Executa todas as validações customizadas
        var validationErrors = await ValidateServicoForm(model);

        if (validationErrors.Any())
        {
            foreach (var error in validationErrors)
            {
                NotificationService.Notify(new NotificationMessage { Severity = NotificationSeverity.Error, Summary = "Erro de Validação", Detail = error, Duration = 5000 });
            }
            return; // Impede a submissão se houver erros de validação
        }

        // Se todas as validações manuais passaram, tente salvar.
        try
        {
            if (model.Id == 0)
            {
                await ServicoApiService.CreateAsync(model);
                NotificationService.Notify(new NotificationMessage
                    {
                        Severity = NotificationSeverity.Success,
                        Summary = "Sucesso",
                        Detail = "Serviço cadastrado com sucesso!",
                        Duration = 4000
                    });
            }
            else
            {
                await ServicoApiService.UpdateAsync(model);
                NotificationService.Notify(new NotificationMessage
                    {
                        Severity = NotificationSeverity.Success,
                        Summary = "Sucesso",
                        Detail = "Serviço atualizado com sucesso!",
                        Duration = 4000
                    });
            }

            Navigation.NavigateTo("/servicos");
        }
        catch (Exception ex)
        {
            NotificationService.Notify(new NotificationMessage
                {
                    Severity = NotificationSeverity.Error,
                    Summary = "Erro",
                    Detail = $"Erro ao salvar serviço: {ex.Message}",
                    Duration = 5000
                });
        }
    }

    private void ExibirErros()
    {
        NotificationService.Notify(new NotificationMessage
            {
                Severity = NotificationSeverity.Warning,
                Summary = "Atenção",
                Detail = "Existem erros de validação no formulário.",
                Duration = 4000
            });
    }

    private void Cancelar() => Navigation.NavigateTo("/servicos");
}
